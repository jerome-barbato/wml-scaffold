<!DOCTYPE html>
<html lang="{{ locale }}" class="utf8" prefix="og: http://ogp.me/ns#">

<head>
	<meta name="viewport" content="width=device-width, maximum-scale=1, minimum-scale=1, initial-scale=1">
	<meta name="msapplication-tap-highlight" content="no">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta charset="utf-8"/>

	<title>{{ page_title|default('Boilerplate') }}</title>

	<link rel="apple-touch-icon" sizes="180x180" href="{{ asset('/theme/favicon/apple-touch-icon.png') }}">
	<link rel="icon" type="image/png" sizes="32x32" href="{{ asset('/theme/favicon/favicon-32x32.png') }}">
	<link rel="icon" type="image/png" sizes="16x16" href="{{ asset('/theme/favicon/favicon-16x16.png') }}">
	<link rel="manifest" href="{{ asset('/theme/favicon/site.webmanifest') }}">
	<link rel="mask-icon" href="{{ asset('/theme/favicon/safari-pinned-tab.svg" color="#5bbad5') }}">
	<meta name="msapplication-TileColor" content="#da532c">
	<meta name="theme-color" content="#ffffff">

	<script type='text/javascript'>
		(function (d, t) {
			var bh = d.createElement(t), s = d.getElementsByTagName(t)[0];
			bh.type = 'text/javascript';
			bh.src = 'https://www.bugherd.com/sidebarv2.js?apikey=vmo2e3xg9sagxssgxpfsnq';
			s.parentNode.insertBefore(bh, s);
		})(document, 'script');
	</script>

	<link href="{{ asset('/theme/app.css') }}" media="all" rel="stylesheet" type="text/css"/>

	{% block head %}{{ system.head|raw }}{% endblock head %}
</head>

<body class="layout-{{ name }} loading">

{% if maintenance_mode %}

	{% block maintenance %}{% endblock maintenance %}

{% else %}

	<main id="app">

	<components></components>
	{% block body %}{% endblock body %}

	</main>

	<script type="text/javascript">
		window.config = {
			debug        : {{ debug|default('0') }},
			env          : '{{ environment|default('production') }}',
			locale       : '{{ locale|default('en') }}',
			home_url     : '{{ home_url }}'
		};
	</script>

{% endif %}

{% block footer %}{{ system.footer|raw }}{% endblock footer %}

{% if options.google_analytics|default('') %}
	<script type="text/javascript">
		(function (i, s, o, g, r, a, m) {i['GoogleAnalyticsObject'] = r;i[r] = i[r] || function () {(i[r].q = i[r].q || []).push(arguments)}, i[r].l = 1 * new Date();a = s.createElement(o),m = s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a, m)})(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
		ga('create', '{{ options.google_analytics }}', 'auto');
		ga('require', 'displayfeatures');
		ga('send', 'pageview');
	</script>
{% endif %}

<script src="{{ asset('/theme/vendor.js') }}" type="text/javascript"></script>
<script src="{{ asset('/theme/app.js') }}" type="text/javascript"></script>

</body>
</html>
