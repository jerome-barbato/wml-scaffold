layout:
  - default:
    - $header:
      - $logo
      - $burger
      - $search
      - $language switcher
      - cta
      - $navigation|extend(nav)
    - $footer:
      - $brands:
        - title
        - brand|loop:
          - img
      - $footer-content:
        - $logo
        - $footer-nav|extend(nav)
        - $newsletter-footer:
          - title
          - text
          - form|extend(form)
        - $social

magazine:
  - layout: default
  - $hero-magazine:
    - title|tag(h1)|acf(required)
    - subtitle
  - $featured:
    - $push-news-item|loop(4):
      - image
      - title|tag(h2)
      - summary|extend(text)
      - link
      - tags
  - $transitions:
    - title|tag(h2)|acf(required)
    - text|acf(required)
    - teaser|extend(text)|acf(required, maxlength:170)
    - elements|loop(3):
      - title|tag(h3)
      - link
      - image
  - $thematics:
    - title
    - $push thematic|extend(push)|loop
  - $newsletter:
    - title|acf(required)
    - text|acf(required)
    - form|acf(false)|extend(form)
    - $popin:
      - disclaimer|extend(wysiywg)
  - $news grid:
    - $push news|loop|acf(false)
    - $load more|acf(false)

group:
  - layout: default
  - $hero:
    - title|tag(h1)|acf(required)
    - subtitle|tag(h2)
    - teaser|extend(wysiwyg)
    - image
    - cta
  - $purpose:
    - title|tag(h2)|acf(required)
    - teaser|extend(text)|tag(h3)|acf(required)
    - video|acf(required)
    - poster
    - cta
  - $model-mission:
    - title|tag(h2)|acf(required)
    - teaser|extend(text)|tag(h3)|acf(required)
    - $image:
      - image|acf(required)
      - legend
  - $strategy:
    - title|tag(h2)|acf(required)
    - cta
    - item|loop(4):
      - visual|acf(required)
      - label|tag(h3)|acf(required)
      - link
  - $governance:
    - title|tag(h2)|acf(required)
    - teaser|extend(text)
    - cta
    - administration:
      - image|acf(required)
      - firstname|tag(h3)|acf(required)
      - lastname|tag(h4)|acf(required)
      - function|extend(text)|acf(required)
      - cta|acf(required)
    - executive:
      - image|acf(required)
      - firstname|tag(h3)|acf(required)
      - lastname|tag(h4)|acf(required)
      - function|extend(text)|acf(required)
      - cta|acf(required)
  - $brands:
    - title|tag(h2)|acf(required)
    - teaser|extend(text)|tag(h3)|acf(required)
    - image|acf(required)
    - cta
  - $history:
    - title|tag(h2)|acf(required)
    - teaser|extend(text)
    - image|acf(required)
    - cta|acf(required)
  - $push-news:
    - $push-news-mini|acf(false)|loop(4):
      - title
      - tags
      - link

landing activites:
  - $hero
  - $expertises:
    - title|tag(h2)|acf(required)
    - text
  - $food-health:
    - title|tag(h2)|acf(required)
    - items:
      - item|loop(4):
        - label|required
        - link|required
        - teaser|extend(text)
        - image|required
        - icon|required
  - $financial-activites:
    - title|tag(h2)|acf(required)
    - label|required
    - link|required
    - teaser(extend(text)|required
  - $key-figures-activites:
    - item|loop(3):
      - figure|acf(required)
      - text|acf(required)

edito:
  - $hero-edito:
    - date
    - tags
    - title|tag(h1)|acf(required)
    - media:
      - $image
      - video
    - text
    - $share
  - $categories:
    - transition
    - thematic
  - $speaker:
    - title|acf(required)
    - image|acf(required)
    - firstname|acf(required)
    - lastname|acf(required)
    - function|acf(required)
    - bio|extend(text)
  - $subsidiary:
    - name|acf(required)
    - link|acf(required)
  - $title:
    - text|acf(required)
  - $rte:
    - content|extend(wysiwyg)|acf(required)
  - $buttons:
    - cta|loop(4)
  - $slider:
    - slide|loop:
      - extend
      - $image|acf(required)
      - numero
      - title|acf(required)
      - text|acf(required)
      - link
      - link label
  - $quotes:
    - slider:
      - slide|loop:
        - image
        - firstname|acf(required)
        - lastname|acf(required)
        - function|acf(required)
        - quote|extend(text)|acf(required)
  - $text-image:
    - position|acf(required)
    - $image
    - title|acf(required)
    - text|acf(required)
  - $full-image:
    - $image
    - description|extend(text)
  - $full-video:
    - video|acf(required)
    - poster|extend(image)|acf(required)
    - legend
    - description|extend(text)
  - $table
  - $key-figures:
    - item|loop(3):
      - icon
      - format|acf(required)
      - figure|acf(required)
      - text|acf(required)
  - $subsidiaries:
    - title
    - subsidiary|loop:
      - image|acf(required)

history:
  - layout: default
  - $hero-history:
    - suptitle
    - title|acf(required)
    - subtitle
    - teaser
    - image
  - $timeline:
    - item|loop(5):
      - date
      - title
  - $paragraph:
    - title
    - content|type(wysiwyg)|acf(required)
  - $year:
    - title|acf(required)
  - $timeline-bullet:
    - content|type(wysiwyg)|acf(required)
  - $full-video
  - $full-image
  - $quotes
  - $pushes-history:
    - push|loop

thematics:
  - layout: default
  - $hero-thematics|extend(hero-activities)
  - $thematics-list:
    - $push-news|loop
  - $pagination
  - $thematics

home:
  - $hero-home:
    - title|acf(required)
    - image
    - $press:
      - news|type(push)|loop(4)
  - $featured
  - $home-purpose:
    - title|acf(required)
    - cta
    - $items|loop:
      - title|acf(required)
      - content
      - link|acf(required)
      - image
  - $text-media-home:
    - position
    - image
    - video
    - legend
    - title|acf(required)
    - content|type(text)|acf(required)
    - background
  - $activities:
    - title
    - item|loop(5):
      - image
      - title
      - text
      - link
  - $human-resources:
    - title|acf(required)
    - text|acf(required)
    - cta|acf(required)
    - testimonies|type(slider):
      - testimony:
        - quote|type(text)|acf(required)
        - image|acf(required)
        - firstname|type(text)|acf(required)
        - lastname|type(text)|acf(required)
        - function|type(text)|acf(required)
    - keyfigures:
      - number|type(text)|acf(required)
      - type
      - text|acf(required)