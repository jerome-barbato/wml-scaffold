layout:
  - default:
      - $header:
          - $logo
          - $burger
          - $social
      - $nav
      - $breadcrumb|extend(nav)
      - $footer:
          - $logo
          - $social
          - $footer nav|extend(nav)

home:
  - layout: default
  - $heading|acf(false):
      - image
      - title|acf(required)
  - $full-text:
      - title
      - wysiwyg
  - $text-image:
      - title
      - wysiwyg
      - image
  - $push shows:
      - title
      - image
      - cta
      - $push show|loop:
          - title
          - text
          - link
          - date
  - $demos:
      - title
      - image
      - $song|loop:
      - title
      - mp3
      - cta
  - $videos:
      - title
      - video|loop
      - cta
  - $friends:
      - title
      - text
      - logo
      - link
  - $downloads:
      - cta|loop

shows:
  - layout: default
  - $full-text
  - $list-shows:
      - $push show|loop

contact:
  - layout: default
  - $full-text
  - $text-image
  - form

gallery:
  - layout: default
  - $gallery-grid:
      - $photo|loop:
          - image
          - title