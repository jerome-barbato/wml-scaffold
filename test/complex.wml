layout:
  - default:
    - header:
      - logo
      - links:
        - link|loop(2):
          - sublink|loop
    - nav:
      - switch
      - search
      - close
      - links|loop:
      - address
      - phone
    - footer:
       - contact
       - social
       - newsletter
       - globalise
       - links
  - catalog:
    - header:
    - nav:
    - footer:
    - heading:
      - breadcrumb
      - title
      - text
    - acquisition:
      - title
      - text
      - url
  - article:
    - header:
    - nav:
    - footer:
    - heading:
    - element|type(fulltext):
        - title
        - subtitle
        - text
        - keyfigure:
          - number
          - unit
          - label
    - element|type(halftext):
      - img
      - title
      - subtitle
      - text
      - link
      - cta
      - textPosition
    - element|type(slider):
      - title
      - link
      - slider:
        - slide|loop:
          - title
          - text
          - cta
    - element|type(thirdtext):
      - title
      - text
      - link
      - img
      - keyfigure:
    - testimonies:
    - push|loop(3):
    - focus:
    - quote:
      - title
      - text
      - name
      - job
    - caseStudies:
      - title
      - cta
      - slider:
        - slide|loop:
          - title
          - excerpt
          - url
    - newsBlock:
    - element|type(videofull):
      - title
      - subtitle
      - video|type(embed,mp4)
      - poster
    - element|type(keyfigures):
      - title
      - keyfigure|loop(4):
    - element|type(rebound):
      - title
      - slider:
         - slide|loop
          - cta
    - element|type(anchor):
      - title
      - name

home:
  - layout: default
  - hero:
    - visual|type(img,video)
    - block|loop(2):
      - title|type(small)
      - title|type(big)
      - text
      - cta
    - globalise:
      - cta
      - popin:
        - close
        - content:
          - logo:
            - img
            - baseline
            - url
          - wysiwyg
          - cta
    - scrollDown
  - company:
    - title
    - block|loop(3):
      - img
      - title
      - text
      - cta
  - aboutUs:
    - title
    - subtitle
    - wysiwyg
    - links|loop(4)
  - testimonies:
    - title
    - slider:
      - slide|loop:
        - theme
        - video
        - name
        - job
        - infos:
          - context
          - profile
          - area
          - type
      - prev
      - next
    - link
  - manager:
    - title
    - detail|loop(5):
      - img
      - title
      - url
  - focus:
    - visual:
      - desktop
      - mobile
    - text
    - cta
  - newsBlock:
    - title
    - news|loop(3):
      - link
      - thumbnail
      - title
      - category
      - categoryLink

catalogList:
  - layout: catalog
  - img
  - link|loop:

catalogGrid:
  - layout: catalog
  - push|loop:
    - img
    - title
    - text
    - url

catalogSlider:
  - layout: catalog
  - slider:
    - slide|loop:
      - img
      - title
      - text
      - url