layout:
  - default:
    - $header:
      - $logo
      - $header nav|extend(nav)
    - $menu:
      - $switch
      - $search
      - close
      - $nav
      - address
      - phone
    - $footer:
      - $contact
      - $social
      - $newsletter
      - $globalise
      - $link|loop(2)

  - catalog:
    - $nav
    - $heading:
      - $breadcrumb
      - title
      - text
    - $acquisition:
      - title
      - text
      - url
    - $footer

  - article:
    - $nav
    - $footer
    - $heading
    - $fulltext:
        - title
        - subtitle
        - text
        - keyfigure:
          - number
          - unit
          - label
    - $halftext:
      - img
      - title
      - subtitle
      - text
      - cta|tag(a)
      - textPosition
    - $slider:
      - title
      - cta|tag(a)
      - slide|loop:
        - subtitle
        - img
        - text
        - url
    - $thirdtext:
      - title
      - text
      - cta|tag(a)
      - img
      - $keyfigure
    - $testimonies:
      - title
      - slider:
        - $testimony|tag(slide)|loop:
          - theme
          - video
          - name
          - job
          - infos:
            - context
            - profile
            - area
            - type
        - prev
        - next
      - cta|tag(a)
    - $push|loop(3):
      - img
      - title
      - text
      - url
    - $focus:
      - visual:
        - desktop
        - mobile
      - text
      - cta
    - $quote:
      - title
      - text
      - name
      - job
    - $case studies:
      - title
      - cta
      - slider:
        - $case study|tag(slide)|loop
    - $news block:
      - title
      - $news|loop(3):
        - link
        - thumbnail
        - title
        - category
        - cta
    - $videofull:
      - title
      - subtitle
      - video
      - poster
    - $keyfigures:
      - title
      - $keyfigure|loop(4)
    - $rebound:
      - title
      - slider:
        - slide|loop:
          - cta

    - $anchor:
      - title
      - name


home:
  - layout: default
  - $hero:
    - visual:
      - img
      - video
    - block|loop(2):
      - title small
      - title big
      - text
      - cta
    - globalise:
      - cta
      - $popin:
        - close
        - content:
          - $logo
          - wysiwyg
          - cta
    - scrollDown|tag(a)
  - $company:
    - title
    - block|loop(3):
      - img
      - subtitle
      - text
      - cta
  - $about us:
    - title
    - subtitle
    - wysiwyg
    - cta|tag(a)
  - $testimonies
  - $manager:
    - title
    - detail|loop(5):
      - img
      - subtitle
      - url
  - $focus
  - $news block

catalog list:
  - layout: catalog
  - $categories:
    - img
    - $link|loop

catalog grid:
  - layout: catalog
  - $push|loop

catalog slider:
  - layout: catalog
  - slider:
    - slide|loop: