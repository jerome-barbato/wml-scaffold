layout:
  - default:
      - $header:
          - $logo
          - $header cta|extend(cta)
          - $burger
      - $nav
      - $breadcrumb|extend(nav)
      - $footer:
          - $logo
          - $infos|extend(wysiwyg)
          - $subsidiaries:
              - $subsidiary|loop|extend(logo)
          - $social
          - $footer nav|extend(nav)
  - home:
      - $header
      - $nav
      - $footer


